<div class="row">
    <div class="col-md-5 col-sm-12 mx-auto mt-5">
        <h2 class="mb-4"><i class="fas fa-user-circle text-primary"></i> Login</h2>

        {{> _msg}}

        <form action="/users/login" method="POST">
            <div class="form-group">
                <label for="email">Email</label>
                <input class="form-control" type="email" name="email" autocomplete="off">
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="password" name="password">
            </div>

            <input type="submit" class="btn btn-primary btn-block pull-right">
        </form>
    </div>
</div>