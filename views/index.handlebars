<div class="row mt-2">
    <div class="col-sm-3">
        <div class="card">
            <div class="card-body">
                <img src="/img/user-placeholder.png" class="rounded-circle mx-auto d-block mb-3">

                <h5 class="card-title">{{user.firstName}} {{user.lastName}}</h5>
                <h6 class="card-subtitle mb-2 text-muted">@{{user.handle}}</h6>

                <div class="stats">
                    <div class="stat">
                        <small>Followers</small>
                        <div>{{arrayItemCount user.followers}}</div>
                    </div>
                    <div class="stat">
                        <small>Following</small>
                        <div>{{arrayItemCount user.following}}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-6">
        {{#each errors}}
            <div class="alert alert-danger">{{msg}}</div>
        {{/each}}

        {{> _msg}}

        <div class="card mb-4">
            <div class="card-body">
                <form action="tweets/tweet" method="POST">
                    <div class="form-group mb-2">
                        <textarea name="text" id="tweet-body" class="form-control" placeholder="What's happening?"></textarea>
                    </div>
                    <div>
                        <small class="align-top" id="char-count"></small>
                        <input class="btn btn-primary float-right" type="submit" value="Tweet">
                    </div>
                </form>
            </div>
        </div>

        {{> _tweets}}
    </div>
</div>