{{#if tweets}} 

{{!-- Edit Modal --}}
<div class="modal fade" id="editTweetModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editTweetModalLabel">Edit Tweet</h5>
            </div>
            <div class="modal-body">
                <textarea class="form-control" id="edit-tweet-text-area"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="finish-edit">Edit Tweet</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

{{!-- Delete model --}}
<div class="modal fade" id="deleteTweetModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editTweetModalLabel">Delete Tweet</h5>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this tweet?</p>

                <div class="card">
                    <div class="card-body" id="tweet-preview"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="finish-delete">Delete Tweet</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

{{!-- Reply model --}}
<div class="modal fade" id="replyTweetModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="replyTweetModalLabel">Reply</h5>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title" id="tweet-author"></h5>
                        <div class="card-text" id="tweet-to-reply"></div>
                    </div>
                </div>
                <div id="invalid-message" class="mt-2"></div>
                <textarea name="reply" id="reply-tweet-body" class="form-control mt-2"></textarea>
                <small id="reply-char-count"></small>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="finish-reply">Reply</button>
                <button type="button" class="btn btn-secondary" id="reply-cancel" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

{{!-- Tweet modal --}}
<div class="modal fade" id="tweetModal" tabindex="-1" role="dialog" aria-labelledby="tweetModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
      <div class="modal-body">
          <div id="tweet-stream"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

{{!-- Tweets --}}
<div class="card mb-4">
    <ul class="list-group list-group-flush">
        {{#each tweets}}
        <li class="list-group-item">
            <div class="tweet-contents">
                <div class="profile-icon">
                    <img src="/img/user-placeholder.png" class="rounded" style="width: 50px;">
                </div>
                <div class="text pl-3" style="overflow: hidden;">

                    {{{generateRetweetLabel ../user this}}}

                    <div class="user-info">
                        <small class="align-top">
                            <a class="align-top" href="/users/profile/{{user.handle}}">{{user.firstName}} {{user.lastName}}</a>
                            <span class="align-top text-muted">@{{user.handle}}</span>
                        </small>
                    </div>
                    <div class="tweet-body mb-2" data-tweet-id="{{id}}">
                        {{text}}
                    </div>
                    <div class="tweet-actions">
                        <div class="tweet-action">
                            {{{generateFavoriteButton ../user this}}}
                        </div>
                        <div class="tweet-action">
                            {{{generateRetweetButton ../user this}}}
                        </div>
                        <div class="tweet-action">
                            <div class="reply" data-tweet-id="{{id}}" data-author="{{user.firstName}} {{user.lastName}}" data-text="{{text}}">
                                <small>
                                    <i class="fas fa-reply"></i>
                                    <span>{{arrayItemCount replies}}</span>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                {{{generateEditDeleteButtons ../user user this}}}
            </div>
        </li>
        {{/each}}
    </ul>
</div>

{{else}}
<h6 class="text-center">No tweets found...</h6>
{{/if}}